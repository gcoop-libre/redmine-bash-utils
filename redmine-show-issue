die ()
{
  echo "ERROR $1" && exit 1
}

CONFIG="$HOME/.redmine.conf"
[[ ! -e "$CONFIG" ]] && die "not found file: $CONFIG"

export http_proxy=""
export https_proxy=""

eval $(sed '/:/!d;/^ *#/d;s/:/ /;' < "$CONFIG" | while read -r key val
do
    str="$key='$val'"
    echo "$str"
done)

[[ -z "$API_URL" ]] && die "empty URL"
[[ -z "$API_KEY" ]] && die "empty KEY"

[[ -z "$1" ]] && die "empty ISSUE_ID"
ISSUE_ID="$1"

H1='"Content-Type: application/json"'
H2='"X-Redmine-API-Key: '$API_KEY'"'
URL="$API_URL/issues/${ISSUE_ID}.json"

echo
echo curl -s -k -H "$H1" -X GET -H "$H2" $URL \
    | bash \
    | python -mjson.tool \
    | egrep "(name|created_on|subject|updated_on|description|spent_hours|done_ratio)" \
    | cut -d: -f1,2 \
    | sed s/'^\ \+'// \
    | sed 's/\\u00f3/รณ/g' \
    | awk -F':' '{printf "%15s:%s\n",$1,$2}'
